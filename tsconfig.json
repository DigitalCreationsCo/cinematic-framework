{
  "include": [
    "src/**/*",
    "src/vite.config.ts",
  ],
  "exclude": [
    "node_modules",
    "**/build",
    "**/dist",
    "**/tests/**/*",
    "**/*.test.ts",
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,

    "noEmit": false,
    "allowImportingTsExtensions": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "paths": {
      "*": ["./*"],
      "#/*": ["./src/client/src/*"],
      "#shared/*": ["./src/shared/*"],
    },
    "types": [
      "node",
      "vite/client"
    ],
    
  }
}