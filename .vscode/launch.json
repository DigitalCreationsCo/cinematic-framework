{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current File (Hot Reload)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/vite-node",
            "args": [
                "--watch",
                "-c",
                "vite.config.node.ts",
                "${file}"
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Docker: Attach to Worker",
            "type": "node",
            "request": "attach",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}/src/worker",
            "port": 9230,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/src/pipeline/**/*.js",
                "${workspaceFolder}/src/workflow/**/*.js",
                "${workspaceFolder}/src/worker/**/*.js",
                "${workspaceFolder}/audio/**/*.js",
                "${workspaceFolder}/src/shared/**/*.js",
                "!**/node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/src/pipeline/**",
                "${workspaceFolder}/src/workflow/**",
                "${workspaceFolder}/src/worker/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Docker: Attach to Pipeline",
            "type": "node",
            "request": "attach",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}/src/pipeline",
            "port": 9230,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/src/pipeline/**/*.js",
                "${workspaceFolder}/src/workflow/**/*.js",
                "${workspaceFolder}/audio/**/*.js",
                "${workspaceFolder}/src/shared/**/*.js",
                "!**/node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/src/pipeline/**",
                "${workspaceFolder}/src/workflow/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Docker: Attach to Server",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "remoteRoot": "/usr/src/app",
            "restart": true,
        },
        {
            "name": "Launch Worker",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/tsx",
            "args": "src/worker/index.ts",
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/src/worker/**/*.js",
                "${workspaceFolder}/src/pipeline/**/*.js",
                "${workspaceFolder}/src/workflow/**/*.js",
                "${workspaceFolder}/audio/**/*.js",
                "${workspaceFolder}/src/shared/**/*.js",
                "!**/node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/src/worker/**",
                "${workspaceFolder}/src/pipeline/**",
                "${workspaceFolder}/src/workflow/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Launch Pipeline",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/tsx",
            "args": "src/pipeline/index.ts",
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/src/pipeline/**/*.js",
                "${workspaceFolder}/src/workflow/**/*.js",
                "${workspaceFolder}/audio/**/*.js",
                "${workspaceFolder}/src/shared/**/*.js",
                "!**/node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/src/pipeline/**",
                "${workspaceFolder}/src/workflow/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/tsx",
            "args": "src/server/index.ts",
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "Debug Server (Hot Reload)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk", 
                "./node_modules/vite-node/dist/cli.mjs",
                "--watch",
                "-c",
                "vite.config.node.ts"
            ],
            "args": [
                "src/server/index.ts"
            ],
            "envFile": "${workspaceFolder}/.env",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Worker (Hot Reload)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk", 
                "./node_modules/vite-node/dist/cli.mjs",
                "--watch",
                "-c",
                "vite.config.node.ts"
            ],
            "args": [
                "src/worker/index.ts"
            ],
            "envFile": "${workspaceFolder}/.env",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Pipeline (Hot Reload)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk", 
                "./node_modules/vite-node/dist/cli.mjs",
                "--watch",
                "-c",
                "vite.config.node.ts"
            ],
            "args": [
                "src/pipeline/index.ts"
            ],
            "envFile": "${workspaceFolder}/.env",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/src/client",
            "sourceMapPathOverrides": {
                "/*": "${webRoot}/*"
            }
        },
        {
            "name": "Docker: Launch Server",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node"
        },
        {
            "name": "Launch Workflow - Debug Existing Video",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/workflow/dist/graph.js",
            "args": [
                "--id",
                "video_1765360860268"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/src/workflow/dist/**/*.js"
            ],
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart"
        },
    ],
    "compounds": [
        {
            "name": "Docker: Debug Full-Stack",
            "configurations": [
                "Docker: Attach to Worker",
                "Docker: Attach to Pipeline",
                "Docker: Attach to Server",
                "Debug Client",
            ]
        },
        {
            "name": "Debug Full-Stack",
            "configurations": [
                "Launch Worker",
                "Launch Pipeline",
                "Launch Server",
                "Debug Client",
            ]
        },
        {
            "name": "Debug Full-Stack (Hot Reload)",
            "configurations": [
                "Debug Worker (Hot Reload)",
                "Debug Pipeline (Hot Reload)",
                "Debug Server (Hot Reload)",
                "Debug Client"
            ]
        }
    ]
}