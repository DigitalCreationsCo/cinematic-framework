{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current File (Node 22 Native)",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "runtimeArgs": [
                "--experimental-transform-types",
                "--watch"
            ],
            "args": ["${file}"],

            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
                ],
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Docker: Attach to Worker",
            "type": "node",
            "request": "attach",
            "port": 9231,
            "restart": true,
            "remoteRoot": "/app",
            "localRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/src/**"],
        },
        {
            "name": "Docker: Attach to Pipeline",
            "type": "node",
            "request": "attach",
            "port": 9230,
            "restart": true,
            "remoteRoot": "/app",
            "localRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/src/**"],
        },
        {
            "name": "Docker: Attach to Server",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "remoteRoot": "/app",
            "localRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/src/**"],
        },
        {
            "name": "Launch Worker",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/dev-runner.js",
            "args": ["dist/worker/index.js"],
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
        },
        {
            "name": "Launch Pipeline",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/dev-runner.js",
            "args": ["dist/pipeline/index.js"],
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
        },
        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/dev-runner.js",
            "args": ["dist/server/index.js"],
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
        },
        {
            "name": "Debug Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/src/client",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*",
                "vsmaps:///*": "${workspaceFolder}/*"
            }
        },
        {
            "name": "Launch Workflow - Debug Existing Video",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/workflow/graph.js",
            "args": [
                "--id",
                "video_1765360860268"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "sourceMaps": true,
            "smartStep": true,
            "outFiles": [
                "${workspaceFolder}/src/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/src/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
    ],
    "compounds": [
        {
            "name": "Docker: Debug Full-Stack",
            "configurations": [
                "Docker: Attach to Worker",
                "Docker: Attach to Pipeline",
                "Docker: Attach to Server",
                "Debug Client",
            ]
        },
        {
            "name": "Debug Full-Stack",
            "configurations": [
                "Launch Worker",
                "Launch Pipeline",
                "Launch Server",
                "Debug Client",
            ],
            "preLaunchTask": "Watch All"
        }
    ]
}